{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/src": [
        "./src"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}